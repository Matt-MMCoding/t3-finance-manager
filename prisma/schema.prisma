generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Payment {
    id                 String   @id @default(cuid())
    createdAt          DateTime @default(now())
    updatedAt          DateTime @updatedAt
    name               String
    amount             Float
    dueDate            String?
    recurring          Boolean  @default(false)
    recurringFrequency String   @default("weekly")
    isIncoming         Boolean
    userId             String

    @@index([userId])
}
